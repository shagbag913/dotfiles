[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
background-alt = ${xrdb:background-alt}
foreground-alt = ${xrdb:foreground-alt}

[bar/top]
width = 100%
height = 4%

border-top-size = 15
border-right-size = 30
border-left-size = 30

fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-right = 2
padding-left = 2

separator = |

module-margin-left = 2
module-margin-right = 2

font-0 = Noto Sans Mono:style=Bold:pixelsize=12;2
font-1 = Font Awesome 5 Free:style=Solid:pixelsize=12;2
font-2 = Font Awesome 5 Brands:pixelsize=12;2

modules-left = i3
modules-center = pulseaudio date backlight-acpi
modules-right = update-check memory wlan eth battery

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/i3]
type = internal/i3
label-mode-padding = 2
index-sort = true
format =  <label-state> <label-mode>

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
