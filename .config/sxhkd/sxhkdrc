# Terminal emulator
super + Return
    kitty

# Reload sxhkd config
super + Escape
    pkill -USR1 -x sxhkd

# Quit / restart bspwm
super + alt + {q,r}
    bspc {quit,wm -r}

# Close / kill
super + {_,shift + }q
    bspc node -{c,k}

# Focus / send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# Start dmenu
super + d
    $HOME/.bin/custom_dmenu

# Set window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Alternate between tiled / monocle layout
super + m
    bspc desktop -l next

# Focus next / previous node in the current desktop
super + {_,shift + }c
    bspc node -f {next,prev}.local

# Brightness
XF86MonBrightness{Up,Down}
   $HOME/.bin/brightness {-inc,-dec}

# Volume
XF86Audio{Raise,Lower}Volume
   $HOME/.bin/volume {+,-}

XF86AudioMute
   $HOME/.bin/volume -mute

# Focus node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
    bspc node -{f,s} {west,south,north,east}
