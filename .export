# only export these on ShagBox.
if [[ ${HOSTNAME} = "ShagBox" ]]; then
  export USE_CCACHE=1
  export CCACHE_DIR=/media/shagbag913/Roms/.ccache
  export LC_ALL=C
  export roms="/media/shagbag913/Roms"
  export PATH="/media/shagbag913/Roms/scripts:${PATH}"
  export PATH="/opt/android-sdk/build-tools/28.0.0/:${PATH}"
fi

# show color with GCC
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'
export EDITOR=vim
export PATH="~/.bin:${PATH}"
