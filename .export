# only export these on ShagBox
if [[ $HOSTNAME = "ShagBox" ]]; then
    export USE_CCACHE=1
    export LC_ALL=C
    export PATH="$HOME/Android/Sdk/build-tools/28.0.3:$PATH"
fi

export PATH="$HOME/.bin:$PATH"

# show color with GCC
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'
export EDITOR=vim

export MAKEJOBS=$(($(nproc --all) * 175 / 100))
