# Script to control brightness and show a notification for xfce
if [[ $(ps -ef | grep $(basename $0) | grep -v grep | wc -l) -ge 3 ]]; then
  exit
fi

for dep in notify-send.sh xbacklight; do
  if ! command -v ${dep} 2&>/dev/null; then
    echo "ERROR: Dependency ${dep} not available!"
    exit 1
  fi
done

if [[ ${1} = "-inc" ]]; then
  xbacklight -inc 10
elif [[ ${1} = "-dec" ]]; then
  xbacklight -dec 10
fi

CURRENT_BRIGHTNESS=$( xbacklight -get )
CURRENT_BRIGHTNESS=${CURRENT_BRIGHTNESS%.*}

# determine which icon to use based on the brightness
if [[ ${CURRENT_BRIGHTNESS} -gt 80 ]]; then
  ICON=notification-display-brightness-full
elif [[ ${CURRENT_BRIGHTNESS} -gt 40 ]]; then
  ICON=notification-display-brightness-medium
elif [[ ${CURRENT_BRIGHTNESS} -gt 20 ]]; then
  ICON=notification-display-brightness-low
elif [[ ${CURRENT_BRIGHTNESS} -lt 20 ]]; then
  ICON=notification-display-brightness-off
fi

CURRENT_BRIGHTNESS_NOTIF_ID=$( notify-send.sh --icon=${ICON} -t 10 -R \
                            ${HOME}/.brightness-tmp "Brightness: ${CURRENT_BRIGHTNESS} %" )
