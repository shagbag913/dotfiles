if [[ ${HOSTNAME} = ShagBox && ${TMUX_PANE} = '%0' && -n "${SSH_CLIENT}" ]]; then
    exit() {
        echo -n "You're connected via ssh. Are you sure you want to exit? [y/N]: "
        read -n 1 yorn
        case ${yorn} in
            y|Y) command exit;;
            n|N) echo -e "\nNot exiting."
        esac
    }
fi

pacman_search() {
  pacman -Qq | grep ${1}
}
